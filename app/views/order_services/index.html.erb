<h3 class="texto"> Listagem de Ordem de Serviços Cadastrados</h3>

<table class="show">
  <thead>
    <tr >
      <th>Cliente</th>      
      <th>Data</th>      
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @order_services.each do |serv| %>
      <tr>
        <td><%= serv.client_id %></td>           
        <td><%= serv.date %></td>        
        <td><%= link_to 'Show', serv%></td>
        <td><%= link_to 'Edit', edit_order_service_path(serv) %></td>
        <td><%= link_to 'Destroy', serv, method: :delete, data: { confirm: 'Tem certeza que deseja excluir ?' } %></td>
      </tr>
    <% end %>
  </tbody>
 
</table>
